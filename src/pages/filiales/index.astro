---
import Layout from "../../layouts/Layout.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import ArtisanalIcon from "../../components/ArtisanalIcon.astro";
import SantoCard from "../../components/SantoCard.astro";
import { santos } from "../../data/santos";
---

<Layout
    title="Nuestros Santos Patronos"
    description="Conozca a los santos que guían y protegen a nuestras comunidades en la Parroquia de San Isidro."
>
    <section class="relative py-32 bg-parchment overflow-hidden">
        <!-- sophisticated background ornaments -->
        <div
            class="absolute top-0 right-0 w-1/3 h-full opacity-5 pointer-events-none overflow-hidden"
        >
            <div class="absolute -top-20 -right-20 animate-sacred-float">
                <ArtisanalIcon name="star" size={500} />
            </div>
        </div>
        <div
            class="absolute bottom-0 left-0 w-1/3 h-full opacity-5 pointer-events-none overflow-hidden"
        >
            <div class="absolute -bottom-20 -left-20 animate-sacred-float-alt">
                <ArtisanalIcon name="cross" size={400} />
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <SectionHeader
                tag="Nuestros Intercesores"
                title="Santos de la Parroquia"
                subtitle="La devoción a nuestros santos es el pilar de nuestras filiales. Explore sus historias de fe, valentía y entrega total a la voluntad de Dios."
            />

            <div class="bento-grid pt-20">
                {
                    (santos as any[]).map((santo, index) => (
                        <div
                            class="animate-sacred-in"
                            style={`animation-delay: ${index * 0.1}s`}
                        >
                            <SantoCard
                                slug={santo.slug}
                                title={santo.title}
                                image={santo.image}
                                description={santo.description}
                                className={santo.class}
                            />
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- decorative CTA -->
    <section class="pb-32 bg-parchment relative overflow-hidden">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <div
                class="inline-block p-[1px] rounded-full bg-gradient-to-r from-transparent via-gold/50 to-transparent w-full mb-16"
            >
            </div>
            <p
                class="text-deep-blue/60 font-body italic text-xl leading-relaxed mb-12"
            >
                "Los santos no son superhombres, ni nacieron perfectos. Son
                personas que antes de llegar al cielo vivieron una vida normal,
                con alegrías y dolores, fatigas y esperanzas."
            </p>
            <div
                class="flex justify-center italic text-gold-dark font-display font-bold tracking-widest uppercase text-sm"
            >
                — Papa Francisco
            </div>
        </div>
    </section>
</Layout>
