---
import Layout from "../../layouts/Layout.astro";
import ArtisanalIcon from "../../components/ArtisanalIcon.astro";
import SectionHeader from "../../components/SectionHeader.astro";

const advocaciones = [
    {
        name: "Nuestra Señora de los Ángeles",
        location: "Costa Rica",
        history:
            'Aparecida el 2 de agosto de 1635 a Juana Pereira, la "Negrita" es la patrona querida de todo el pueblo costarricense...',
        image: "/images/maria/virgen_angeles.png",
    },
    {
        name: "Virgen de Guadalupe",
        location: "México",
        history:
            "Aparecida a San Juan Diego en el cerro del Tepeyac en 1531, dejando su imagen milagrosa en la tilma del indio...",
        image: "https://images.unsplash.com/photo-1618342411894-3158728d6174?q=80&w=800",
    },
    {
        name: "Virgen de Fátima",
        location: "Portugal",
        history:
            "Se apareció a tres pastorcitos en Cova da Iria en 1917, pidiendo oración y penitencia por la conversión del mundo...",
        image: "https://images.unsplash.com/photo-1594632367985-0565f49c0667?q=80&w=800",
    },
];
---

<Layout
    title="Advocaciones Marianas | Parroquia San Isidro"
    description="Historias y mensajes de la Virgen María en sus diferentes apariciones."
>
    <section class="py-32 bg-parchment relative overflow-hidden">
        <!-- background ornament -->
        <div class="absolute top-0 right-0 opacity-[0.03] pointer-events-none">
            <ArtisanalIcon name="sparkle" size={600} />
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="max-w-3xl mb-24 animate-sacred-in">
                <SectionHeader
                    tag="Flores de María"
                    title="Advocaciones"
                    subtitle="María se manifiesta de diversas maneras según la cultura y necesidad de sus hijos, pero sigue siendo la misma Madre de Dios."
                    align="left"
                />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
                {
                    (advocaciones as any[]).map((adv, index) => (
                        <div
                            class="glass-card rounded-[3rem] overflow-hidden flex flex-col group hover:-translate-y-3 transition-all duration-700 hover:shadow-glass-hover animate-sacred-in"
                            style={`animation-delay: ${index * 0.1}s`}
                        >
                            <div class="h-64 overflow-hidden relative">
                                <img
                                    src={adv.image}
                                    alt={adv.name}
                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-deep-blue/80 via-transparent to-transparent opacity-60" />
                                <div class="absolute bottom-6 left-8 flex items-center text-parchment space-x-3 bg-deep-blue/20 backdrop-blur-md px-4 py-1.5 rounded-full border border-white/10">
                                    <ArtisanalIcon
                                        name="map-pin"
                                        size={14}
                                        class="text-gold"
                                        weight="bold"
                                    />
                                    <span class="text-[10px] font-bold uppercase tracking-[0.2em]">
                                        {adv.location}
                                    </span>
                                </div>
                            </div>
                            <div class="p-10 flex-grow space-y-6">
                                <h3 class="text-2xl font-display font-bold text-deep-blue group-hover:text-gold-dark transition-colors">
                                    {adv.name}
                                </h3>
                                <p class="text-sm text-deep-blue/60 leading-relaxed italic font-body">
                                    "{adv.history}"
                                </p>
                                <div class="pt-6 border-t border-gold/10 flex items-center justify-between group/link">
                                    <div class="flex items-center text-gold-dark text-xs font-bold uppercase tracking-[0.2em]">
                                        <ArtisanalIcon
                                            name="book-open"
                                            size={18}
                                            class="mr-3 text-gold/60"
                                            weight="duotone"
                                        />
                                        <span>Ver Historia</span>
                                    </div>
                                    <ArtisanalIcon
                                        name="arrow-right"
                                        size={16}
                                        class="text-gold/40 group-hover/link:translate-x-2 transition-transform"
                                    />
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>

<style>
    .shadow-glass-hover {
        box-shadow:
            0 20px 60px 0 rgba(0, 0, 0, 0.1),
            0 0 40px 0 rgba(212, 175, 55, 0.05);
    }
</style>
