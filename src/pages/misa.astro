---
// @ts-nocheck
import Layout from "../layouts/Layout.astro";
import ArtisanalIcon from "../components/ArtisanalIcon.astro";
import SectionHeader from "../components/SectionHeader.astro";

interface ScheduleItem {
    day: string;
    time: string;
    place: string;
    frequency?: string;
}

interface ConfessionItem {
    day: string;
    time: string;
    place: string;
}

interface Schedules {
    weekday: ScheduleItem[];
    weekend: ScheduleItem[];
    confessions: ConfessionItem[];
}

const schedules: Schedules = {
    weekday: [
        {
            day: "Martes",
            time: "6:00 PM",
            place: "San Isidro",
            frequency: "Todos",
        },
        {
            day: "Miércoles",
            time: "6:00 PM",
            place: "Chachagua",
            frequency: "Todos",
        },
        {
            day: "Jueves",
            time: "4:00 PM",
            place: "Cerro Alegre",
            frequency: "1er y 3er",
        },
        {
            day: "Jueves",
            time: "5:00 PM",
            place: "La Altura",
            frequency: "2do",
        },
        {
            day: "Jueves",
            time: "6:00 PM",
            place: "San Isidro",
            frequency: "Todos",
        },
    ],
    weekend: [
        {
            day: "Viernes",
            time: "5:00 PM",
            place: "San Rafael",
            frequency: "1er",
        },
        {
            day: "Viernes",
            time: "5:00 PM",
            place: "San Juan",
            frequency: "3er",
        },
        {
            day: "Viernes",
            time: "6:00 PM",
            place: "Linda Vista",
            frequency: "2do y 4to",
        },
        {
            day: "Viernes",
            time: "6:00 PM",
            place: "El Carmen",
            frequency: "1er y 3er",
        },
        {
            day: "Sábado",
            time: "4:00 PM",
            place: "El Abanico",
            frequency: "Todos",
        },
        {
            day: "Sábado",
            time: "5:00 PM",
            place: "La Cruz",
            frequency: "Todos",
        },
        {
            day: "Sábado",
            time: "6:00 PM",
            place: "El Invu",
            frequency: "Todos",
        },
        {
            day: "Domingo",
            time: "8:00 AM",
            place: "San Francisco",
            frequency: "Todos",
        },
        {
            day: "Domingo",
            time: "9:30 AM",
            place: "Chachagua",
            frequency: "Todos",
        },
        {
            day: "Domingo",
            time: "11:00 AM",
            place: "San Isidro",
            frequency: "Todos",
        },
        {
            day: "Domingo",
            time: "4:00 PM",
            place: "El Sector (Ángeles)",
            frequency: "1er y 3er",
        },
    ],
    confessions: [
        {
            day: "Martes y Jueves",
            time: "4:30 PM - 5:30 PM",
            place: "Oficina Parroquial",
        },
        {
            day: "Sábados",
            time: "9:00 AM - 11:00 AM",
            place: "Templo Parroquial",
        },
    ],
};
---

<Layout
    title="Horarios de Misa | Vida Sacramental"
    description="Consulte los horarios de la Santa Misa, Hora Santa y Confesiones en nuestra parroquia San Isidro y filiales."
>
    <!-- refined ornamental header (no photo) -->
    <section
        class="relative py-40 bg-parchment overflow-hidden border-b border-gold/10"
    >
        <!-- background ornaments -->
        <div
            class="absolute top-0 right-0 w-1/3 h-full opacity-5 pointer-events-none overflow-hidden"
        >
            <div class="absolute -top-20 -right-20 animate-sacred-float">
                <ArtisanalIcon name="sun" size={500} />
            </div>
        </div>
        <div
            class="absolute bottom-0 left-0 w-1/3 h-full opacity-5 pointer-events-none overflow-hidden"
        >
            <div class="absolute -bottom-20 -left-20 animate-sacred-float-alt">
                <ArtisanalIcon name="cross" size={400} />
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 pt-20">
            <SectionHeader
                tag="Vida Sacramental"
                title="Horarios de Gracia"
                subtitle="Encuentre los momentos de encuentro con el Señor a través de la Eucaristía y el Sacramento de la Reconciliación."
            />

            <div
                class="flex justify-center mt-12 animate-sacred-in"
                style="animation-delay: 0.2s;"
            >
                <p
                    class="text-xl text-gold-dark max-w-2xl text-center font-body italic"
                >
                    "Vengan a mí todos los que están cansados y agobiados, y yo
                    los aliviaré."
                </p>
            </div>
        </div>
    </section>

    <!-- schedules -->
    <section class="py-32 bg-parchment relative overflow-hidden">
        <!-- background ornament -->
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 opacity-[0.03] pointer-events-none"
        >
            <ArtisanalIcon name="cross" size={800} />
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-stretch">
                <!-- Daily Mass -->
                <div
                    class="glass-card p-12 rounded-[3.5rem] flex flex-col items-center text-center group hover:-translate-y-2 transition-all duration-700 hover:shadow-glass-hover"
                >
                    <div
                        class="w-20 h-20 rounded-[1.5rem] bg-gold/5 border border-gold/10 flex items-center justify-center mb-10 group-hover:rotate-6 transition-transform duration-500"
                    >
                        <ArtisanalIcon
                            name="sun"
                            size={40}
                            weight="duotone"
                            ornate={true}
                            class="text-gold-dark"
                        />
                    </div>
                    <h2
                        class="text-3xl font-display font-bold text-deep-blue mb-10"
                    >
                        Entre semana
                    </h2>
                    <div class="w-full space-y-8">
                        {
                            (schedules.weekday as any[]).map((horario) => (
                                <div class="relative pb-8 last:pb-0 border-b border-gold/10 last:border-0">
                                    <p class="text-gold-dark font-bold text-[10px] uppercase tracking-[0.2em] mb-3">
                                        {horario.day} — {horario.frequency}
                                    </p>
                                    <p class="text-3xl font-display font-bold text-deep-blue mb-2">
                                        {horario.time}
                                    </p>
                                    <p class="text-deep-blue/50 text-xs font-body italic">
                                        {horario.place}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </div>

                <!-- Sunday Mass -->
                <div
                    class="relative group rounded-[3.5rem] overflow-hidden shadow-2xl scale-105 z-20"
                >
                    <div class="absolute inset-0 bg-deep-blue"></div>
                    <!-- decorative pattern -->
                    <div
                        class="absolute inset-0 opacity-10 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] mix-blend-overlay"
                    >
                    </div>

                    <div
                        class="relative p-12 flex flex-col items-center text-center h-full border-2 border-gold/50 rounded-[3.5rem]"
                    >
                        <div
                            class="bg-gold px-6 py-2 rounded-full text-[10px] font-bold uppercase tracking-[0.3em] text-deep-blue mb-12 shadow-gold/20 shadow-lg"
                        >
                            Día del Señor
                        </div>

                        <div
                            class="w-24 h-24 rounded-[1.8rem] bg-gold flex items-center justify-center mb-10 shadow-2xl shadow-gold/30 group-hover:scale-110 transition-transform duration-700"
                        >
                            <ArtisanalIcon
                                name="hands-praying"
                                size={48}
                                weight="bold"
                                class="text-deep-blue"
                            />
                        </div>

                        <h2
                            class="text-4xl font-display font-bold text-gold mb-12"
                        >
                            Fin de semana
                        </h2>

                        <div class="w-full space-y-8">
                            {
                                (schedules.weekend as any[]).map((item) => (
                                    <div class="border-b border-gold/20 pb-6 last:border-0 last:pb-0">
                                        <p class="text-parchment font-display font-bold text-3xl mb-2">
                                            {item.time}
                                        </p>
                                        <p class="text-gold-light/60 text-[10px] font-bold uppercase tracking-[0.2em] mb-1">
                                            {item.day} — {item.place}
                                        </p>
                                        <p class="text-gold/40 text-[9px] font-bold uppercase tracking-[0.1em]">
                                            {item.frequency}
                                        </p>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <!-- Confessions -->
                <div
                    class="glass-card p-12 rounded-[3.5rem] flex flex-col items-center text-center group hover:-translate-y-2 transition-all duration-700 hover:shadow-glass-hover"
                >
                    <div
                        class="w-20 h-20 rounded-[1.5rem] bg-gold/5 border border-gold/10 flex items-center justify-center mb-10 group-hover:-rotate-6 transition-transform duration-500"
                    >
                        <ArtisanalIcon
                            name="hand-heart"
                            size={40}
                            weight="duotone"
                            ornate={true}
                            class="text-gold-dark"
                        />
                    </div>
                    <h2
                        class="text-3xl font-display font-bold text-deep-blue mb-10"
                    >
                        Confesiones
                    </h2>
                    <div class="w-full space-y-8">
                        {
                            (schedules.confessions as any[]).map((item) => (
                                <div class="relative pb-8 last:pb-0 border-b border-gold/10 last:border-0">
                                    <p class="text-gold-dark font-bold text-[10px] uppercase tracking-[0.2em] mb-3">
                                        {item.day}
                                    </p>
                                    <p class="text-3xl font-display font-bold text-deep-blue mb-2">
                                        {item.time}
                                    </p>
                                    <p class="text-deep-blue/50 text-xs font-body italic">
                                        {item.place}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>

<!-- note -->
<section class="pb-40 bg-parchment">
    <div class="max-w-4xl mx-auto px-4">
        <div
            class="p-16 bg-gold/5 rounded-[4rem] border border-gold/10 text-center relative overflow-hidden group shadow-xl"
        >
            <div
                class="absolute -top-20 -right-20 opacity-[0.03] group-hover:scale-110 transition-transform duration-1000"
            >
                <ArtisanalIcon name="info" size={400} />
            </div>
            <ArtisanalIcon
                name="bell-ringing"
                size={32}
                class="text-gold/40 mx-auto mb-8 animate-bounce"
                weight="duotone"
            />
            <h3 class="text-3xl font-display font-bold text-deep-blue mb-6">
                Avisos Litúrgicos
            </h3>
            <p
                class="text-lg text-deep-blue/70 italic leading-relaxed max-w-2xl mx-auto"
            >
                Los horarios pueden variar durante festividades especiales o
                tiempos litúrgicos como Cuaresma, Semana Santa o Navidad. Le
                recomendamos estar atento a la sección de <a
                    href="/noticias"
                    class="text-gold-dark font-bold hover:underline decoration-gold/30 underline-offset-8"
                    >Noticias</a
                > para avisos específicos.
            </p>
        </div>
    </div>
</section>

<style>
    .shadow-glass-hover {
        box-shadow:
            0 20px 60px 0 rgba(0, 0, 0, 0.1),
            0 0 40px 0 rgba(212, 175, 55, 0.05);
    }
</style>
