---
// @ts-nocheck
import Layout from "../layouts/Layout.astro";
import ArtisanalIcon from "../components/ArtisanalIcon.astro";
import SectionHeader from "../components/SectionHeader.astro";

const grades = [
    {
        title: "Nivel 1",
        age: "7 años",
        description: "Iniciación cristiana y primer encuentro con la Palabra.",
    },
    {
        title: "Nivel 2",
        age: "8 años",
        description: "Camino hacia la Reconciliación y el amor de Dios.",
    },
    {
        title: "Nivel 3",
        age: "9 años",
        description: "Preparación intensa para la Primera Comunión.",
    },
    {
        title: "Nivel 4",
        age: "10-11 años",
        description: "Seguimiento en la fe y vivencia de la Eucaristía.",
    },
    {
        title: "Nivel 5",
        age: "12 años",
        description: "Inicios de la preparación para la Confirmación.",
    },
    {
        title: "Nivel 6",
        age: "13-14 años",
        description: "Sacramento de la Confirmación y madurez en la fe.",
    },
];
---

<Layout
    title="Catequesis | Formación de Fe"
    description="Recursos y materiales para la catequesis de nuestra parroquia San Isidro. Organizado por niveles y grados."
>
    <!-- refined ornamental header -->
    <section
        class="relative py-40 bg-parchment overflow-hidden border-b border-gold/10"
    >
        <div
            class="absolute top-0 right-0 w-1/3 h-full opacity-5 pointer-events-none overflow-hidden"
        >
            <div class="absolute -top-20 -right-20 animate-sacred-float">
                <ArtisanalIcon name="book-open" size={500} />
            </div>
        </div>
        <div
            class="absolute bottom-0 left-0 w-1/3 h-full opacity-5 pointer-events-none overflow-hidden"
        >
            <div class="absolute -bottom-20 -left-20 animate-sacred-float-alt">
                <ArtisanalIcon name="hands-praying" size={400} />
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 pt-20">
            <SectionHeader
                tag="Formación de la Fe"
                title="Catequesis Parroquial"
                subtitle="Acompañando a nuestros niños y jóvenes en el camino hacia la amistad con Jesús."
            />
        </div>
    </section>

    <!-- materials section -->
    <section class="py-32 bg-parchment relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="mb-16">
                <h2 class="text-4xl font-display font-bold text-deep-blue mb-6">
                    Recursos por Grados
                </h2>
                <p class="text-lg text-deep-blue/60 italic font-body max-w-2xl">
                    Seleccione el nivel correspondiente para visualizar y
                    descargar los materiales de estudio, oraciones y guías.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    grades.map((grade) => (
                        <div class="glass-card p-10 rounded-[3rem] border border-gold/10 hover:border-gold/30 transition-all duration-500 group hover:shadow-glass-hover">
                            <div class="flex justify-between items-start mb-8">
                                <div class="w-14 h-14 rounded-2xl bg-gold/10 flex items-center justify-center text-gold group-hover:bg-gold group-hover:text-parchment transition-all duration-500">
                                    <ArtisanalIcon
                                        name="folder-open"
                                        size={28}
                                        weight="duotone"
                                    />
                                </div>
                                <span class="text-[10px] font-bold uppercase tracking-widest text-gold-dark/60 bg-gold/5 px-4 py-1 rounded-full">
                                    {grade.age}
                                </span>
                            </div>
                            <h3 class="text-2xl font-display font-bold text-deep-blue mb-4">
                                {grade.title}
                            </h3>
                            <p class="text-sm text-deep-blue/60 mb-8 font-body italic leading-relaxed">
                                {grade.description}
                            </p>

                            <div class="space-y-4">
                                <button class="w-full py-4 rounded-2xl border border-gold/20 text-gold-dark font-bold text-xs uppercase tracking-widest hover:bg-gold/5 transition-colors flex items-center justify-center space-x-3">
                                    <ArtisanalIcon
                                        name="download-simple"
                                        size={16}
                                    />
                                    <span>Ver Archivos</span>
                                </button>
                                <label class="w-full py-4 rounded-2xl bg-deep-blue text-parchment font-bold text-xs uppercase tracking-widest hover:bg-deep-blue/90 transition-colors flex items-center justify-center space-x-3 cursor-pointer">
                                    <ArtisanalIcon
                                        name="upload-simple"
                                        size={16}
                                    />
                                    <span>Subir Archivo</span>
                                    <input type="file" class="hidden" />
                                </label>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- info note -->
    <section class="pb-40 bg-parchment">
        <div class="max-w-4xl mx-auto px-4">
            <div
                class="p-16 bg-gold/5 rounded-[4rem] border border-gold/10 text-center relative overflow-hidden group"
            >
                <div
                    class="absolute -top-20 -right-20 opacity-[0.03] group-hover:scale-110 transition-transform duration-1000"
                >
                    <ArtisanalIcon name="info" size={400} />
                </div>
                <h3 class="text-3xl font-display font-bold text-deep-blue mb-6">
                    Información Importante
                </h3>
                <p
                    class="text-lg text-deep-blue/70 italic leading-relaxed max-w-2xl mx-auto mb-8 font-body"
                >
                    Las inscripciones para el nuevo ciclo de catequesis se
                    realizan durante el mes de febrero en la Oficina Parroquial.
                </p>
                <div
                    class="inline-flex items-center space-x-2 text-gold-dark font-bold"
                >
                    <ArtisanalIcon name="phone" size={20} />
                    <span>Más información: +506 2460-1234</span>
                </div>
            </div>
        </div>
    </section>
</Layout>
