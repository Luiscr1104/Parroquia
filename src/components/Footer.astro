---
// @ts-nocheck
import ArtisanalIcon from "./ArtisanalIcon.astro";

const currentYear = new globalThis.Date().getFullYear();

interface Link {
    name: string;
    href: string;
}

interface Section {
    title: string;
    links: Link[];
}

const sections: Section[] = [
    {
        title: "Nuestra Parroquia",
        links: [
            { name: "Historia", href: "#history" },
            { name: "Sacerdotes", href: "#priests" },
            { name: "Sacramentos", href: "#sacraments" },
            { name: "Horarios de Misa", href: "/misa" },
        ],
    },
    {
        title: "Comunidad",
        links: [
            { name: "Filiales", href: "/filiales" },
            { name: "Catequesis", href: "/catequesis" },
            { name: "Grupos Juveniles", href: "/pastoral-juvenil" },
            { name: "Cáritas", href: "#caritas" },
        ],
    },
];
---

<footer
    class="bg-deep-blue text-parchment/90 pt-24 pb-12 relative overflow-hidden"
>
    <!-- background ornaments -->
    <div
        class="absolute bottom-0 right-0 opacity-5 pointer-events-none translate-x-1/4 translate-y-1/4"
    >
        <ArtisanalIcon name="cross" size={600} weight="thin" />
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-16 mb-24"
        >
            <!-- branding column -->
            <div class="space-y-8">
                <a href="/" class="flex items-center space-x-4 group">
                    <div
                        class="w-12 h-12 rounded-xl bg-gold flex items-center justify-center text-parchment shadow-lg group-hover:scale-110 transition-transform"
                    >
                        <ArtisanalIcon name="cross" size={28} weight="bold" />
                    </div>
                    <span
                        class="text-3xl font-display font-bold tracking-tight text-parchment"
                        >San Isidro</span
                    >
                </a>
                <p
                    class="text-base leading-relaxed text-parchment/60 max-w-xs font-body italic"
                >
                    "Llevando la luz de Cristo a cada corazón en nuestra
                    comunidad desde hace décadas."
                </p>
                <div class="flex space-x-5">
                    <a
                        href="#"
                        class="w-10 h-10 rounded-full bg-parchment/10 flex items-center justify-center text-parchment/50 hover:bg-gold hover:text-deep-blue transition-all"
                        aria-label="Facebook"
                        ><ArtisanalIcon name="facebook-logo" size={20} /></a
                    >
                    <a
                        href="#"
                        class="w-10 h-10 rounded-full bg-parchment/10 flex items-center justify-center text-parchment/50 hover:bg-gold hover:text-deep-blue transition-all"
                        aria-label="Instagram"
                        ><ArtisanalIcon name="instagram-logo" size={20} /></a
                    >
                </div>
            </div>

            <!-- quick links -->
            {
                sections.map((section: Section) => (
                    <div>
                        <h3 class="text-gold font-display font-bold text-xl mb-8 tracking-wide">
                            {section.title}
                        </h3>
                        <ul class="space-y-5">
                            {section.links.map((link: Link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="text-parchment/70 hover:text-gold hover:translate-x-2 flex items-center space-x-2 transition-all group"
                                    >
                                        <div class="w-1.5 h-1.5 rounded-full bg-gold/0 group-hover:bg-gold transition-all" />
                                        <span>{link.name}</span>
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }

            <!-- contact -->
            <div>
                <h3
                    class="text-gold font-display font-bold text-xl mb-8 tracking-wide"
                >
                    Contacto
                </h3>
                <ul class="space-y-6">
                    <li class="flex items-start space-x-4 text-parchment/70">
                        <div
                            class="w-8 h-8 rounded-lg bg-gold/10 flex items-center justify-center text-gold shrink-0"
                        >
                            <ArtisanalIcon
                                name="map-pin"
                                size={18}
                                weight="regular"
                            />
                        </div>
                        <span class="text-sm"
                            >San Isidro, San Ramón, Costa Rica</span
                        >
                    </li>
                    <li class="flex items-center space-x-4 text-parchment/70">
                        <div
                            class="w-8 h-8 rounded-lg bg-gold/10 flex items-center justify-center text-gold shrink-0"
                        >
                            <ArtisanalIcon
                                name="phone"
                                size={18}
                                weight="regular"
                            />
                        </div>
                        <span class="text-sm">+506 2460-1234</span>
                    </li>
                    <li class="flex items-center space-x-4 text-parchment/70">
                        <div
                            class="w-8 h-8 rounded-lg bg-gold/10 flex items-center justify-center text-gold shrink-0"
                        >
                            <ArtisanalIcon
                                name="envelope"
                                size={18}
                                weight="regular"
                            />
                        </div>
                        <span class="text-sm">info@parroquiasanisidro.com</span>
                    </li>
                </ul>
            </div>
        </div>

        <div
            class="pt-12 border-t border-parchment/10 flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0 text-sm"
        >
            <p class="text-parchment/40">
                &copy; {currentYear} Parroquia San Isidro.
            </p>
            <p class="text-parchment/40">
                Un diseño con propósito por
                <a
                    href="https://luisroberto.dev"
                    target="_blank"
                    class="text-gold/60 hover:text-gold transition-colors font-bold underline underline-offset-4 decoration-gold/20 hover:decoration-gold/50"
                    >luisroberto.dev</a
                >
            </p>
        </div>
    </div>
</footer>
